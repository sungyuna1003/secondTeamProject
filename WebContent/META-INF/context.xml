<context path="/UserChat" docBase="www">
<Resource 
	name="jdbc/UserChat"
	auth="container"
	type="javax.sql.DataSource"
	driverClassName="com.mysql.jdbc.Driver"
	username="root"
	password="1234"
	
	logintTimeout="10"
	maxActive="50"
	maxIdle="20"
	maxWait="5000"
	validationQuery="SELECT 1 FROM DUAL"
	url="jdbc:mysql://localhost:3306/Jobproject"
	testOnBorrow="true"
	/>
<ResourceLink	 type="javax.sql.data.DataSource"
	name="jdbc/Jobproject" global="jdbc/Jobproject"/>
</context>
<!--
    name : JDBC이름, 변경 가능
    auth : 컨테이너를 자원 관리자로 기술
    type : 웹에서 이 리소스를 사용할 때 DataSource로 리턴됨
    driverClassName : JDBC 드라이버
    username : 접속계정
    password : 접속할 계정 비밀번호
    
    loginTimeout : 연결 끊어지는 시간
    maxActive : 최대 연결 가능한 Connection수 (기본 20개)
    maxIdle : Connection pool 유지를 위해 최대 대기 connection 숫자
    maxWait : 사용 가능한 커넥션이 없을 때 커넥션 회수를 기다리는 시간 (1000 = 1초)
    testOnBorrow : db에 test를 해볼 것인지
-->
